<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<context-param>
		<param-name>drivername</param-name>
		<param-value>My Oracle Driver</param-value>
	</context-param>
	<display-name>ServletApp</display-name>
	<filter>
		<description>
		</description>
		<display-name>SessionCheckFilter</display-name>
		<filter-name>SessionCheckFilter</filter-name>
		<filter-class>com.fis.servlets.SessionCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SessionCheckFilter</filter-name>
		<url-pattern>*.fis</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>com.fis.servlets.SessionCountListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.fis.servlets.ServerStartAndShutDownListener</listener-class>
	</listener>
	<servlet>
		
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>com.fis.servlets.HelloServlet</servlet-class>
	</servlet>
	<servlet>
		<init-param>
		<param-name>drivername</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
		</init-param>
		<servlet-name>AddUser</servlet-name>
		<servlet-class>com.fis.servlets.AddUser</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<load-on-startup>1</load-on-startup>
		<display-name>DeleteUser</display-name>
		<servlet-name>DeleteUser</servlet-name>
		<servlet-class>com.fis.servlets.DeleteUser</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>LogOutServlet</display-name>
		<servlet-name>LogOutServlet</servlet-name>
		<servlet-class>com.fis.servlets.LogOutServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>HeaderServlet</display-name>
		<servlet-name>HeaderServlet</servlet-name>
		<servlet-class>com.fis.servlets.HeaderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddUser</servlet-name>
		<url-pattern>/adduser.fis</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteUser</servlet-name>
		<url-pattern>/deleteuser.fis</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogOutServlet</servlet-name>
		<url-pattern>/logout.fis</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HeaderServlet</servlet-name>
		<url-pattern>/header.fis</url-pattern>
	</servlet-mapping>
	<session-config>
	<session-timeout>5</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<!-- <error-page>
	 <error-code>404</error-code>
	 <location>error.html</location>
	 <exception-type>java.lang.NullPointorException</exception-type>
	 <location>error.html</location>
	</error-page> -->
	 <resource-ref>
    <description>MySQL Datasource example</description>
    <res-ref-name>jdbc/mydbjndi</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
	
</web-app>
